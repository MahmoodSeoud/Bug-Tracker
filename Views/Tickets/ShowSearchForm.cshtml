

<h4>Search for a Tickets</h4>
<hr />
<div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Ticket</h6>
        </div>
            <div class="card-body"> 
            <form asp-action="ShowSearchResults">
            <div class="form-group"> 
                <p5>Subject</p5>
                <label for="SearchSubject" class="control-label"></label>
                <input name="SearchSubject" class="form-control" />
            </div>

            <div class="form-group">
                <p5>Status</p5>
                <label for="SearchStatus" class="control-label"></label>
                <input name="SearchStatus" class="form-control" />
            </div>

        <div class="form-group">
                <p5>Date</p5>
                <label for="SearchDate" class="control-label"></label>
                <input type="date" name="SearchDate" class="form-control" />
            </div>
              <div>
                <input type="submit" value="Search" class="btn btn-primary" />
                <a class="btn btn-secondary btn-sm" asp-action="Index"><i class="bi bi-arrow-return-left"></i> &nbsp;Back to List</a>

            </div>
        </form>
            </div>
    </div>




